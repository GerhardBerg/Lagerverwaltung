<Window x:Class="Lagerverwaltung.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lagerverwaltung"
        mc:Ignorable="d"
        Title="Lagerverwaltung" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Bestellungen" Click="Bestellungen_Click" />
            <MenuItem Header="_Wareneingang" Click="Wareneingang_Click" />
            <MenuItem Header="_Lager" Click="Lager_Click" />
            <MenuItem Header="_Warenausgang" Click="Warenausgang_Click" />
        </Menu>
        <Grid>
            <TextBlock Text="Willkommen im Lagerverwaltungssystem"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="18"/>
        </Grid>
    </DockPanel>
</Window>
