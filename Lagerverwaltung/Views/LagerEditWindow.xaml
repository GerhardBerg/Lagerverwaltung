<Window x:Class="Lagerverwaltung.Views.LagerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lagerverwaltung.Views"
        mc:Ignorable="d"
        Title="Teileänderung" Height="400" Width="600">
    <Grid Margin="10">
        <!-- Definiere zwei Spalten -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Definiere Reihen für jede Eingabe -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Teilenummer" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
        <TextBlock Text="Typ" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
        <TextBlock Text="Wert" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
        <TextBlock Text="Bezeichnung" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
        <TextBlock Text="Menge" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
        <TextBlock Text="Einzelpreis" Grid.Row="7" Grid.Column="0" Margin="0,5"/>
        <TextBlock Text="Lagermenge minimum" Grid.Row="7" Grid.Column="2" Margin="10,5" HorizontalAlignment="Right"/>
        <TextBlock Text="Lagermenge maximum" Grid.Row="8" Grid.Column="2" Margin="10,5" HorizontalAlignment="Right"/>
        <TextBlock Text="Lagerplatz" Grid.Row="9" Grid.Column="2" Margin="10,5" HorizontalAlignment="Right"/>
        <TextBlock Text="letzte Änderung" Grid.Row="0" Grid.Column="2" Margin="10,5" HorizontalAlignment="Right"/>
        
        <TextBox Text="{Binding Teilenummer}" Grid.Row="0" Grid.Column="1" Margin="5" IsEnabled="False"/>
        <TextBox Text="{Binding Letzte_Aktualisierung, StringFormat=dd.MM.yyyy}" Grid.Row="0" Grid.Column="3" Margin="5" IsEnabled="False"/>
        <TextBox Text="{Binding Typ}" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <TextBox Text="{Binding Wert}" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <TextBox Text="{Binding Bezeichnung}" Grid.Row="4" Grid.Column="1" Margin="5"/>
        <TextBox Text="{Binding Menge}" Grid.Row="5" Grid.Column="1" Margin="5"/>
        <TextBox Text="{Binding Bezeichnung}" Grid.Row="4" Grid.Column="1" Margin="5"/>
        <TextBox Text="{Binding Einzelpreis}" Grid.Row="7" Grid.Column="1" Margin="5"/>
        <TextBox Text="{Binding Lagermenge_min}" Grid.Row="7" Grid.Column="3" Margin="5"/>
        <TextBox Text="{Binding Lagermenge_max}" Grid.Row="8" Grid.Column="3" Margin="5"/>
        <TextBox Text="{Binding Lagerplatz}" Grid.Row="9" Grid.Column="3" Margin="5"/>

        <Button Content="Speichern" Width="80" HorizontalAlignment="Right" Click="BtnSave_Click" Grid.Column="2" Grid.Row="10" Margin="5,5,10,5"/>
        <Button Content="Abbruch" Width="80" HorizontalAlignment="Right" Click="BtnCancel_Click" Grid.Column="3" Grid.Row="10" Margin="5"/>
    </Grid>
</Window>
