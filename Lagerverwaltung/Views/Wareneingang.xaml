<Window x:Class="Lagerverwaltung.Views.Wareneingang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lagerverwaltung.Views"
        mc:Ignorable="d"
        Title="Wareneingang" Height="450" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--
        <CheckBox Name="chkSelectAll" Content="Alle auswählen" Margin="0,0,0,5" Checked="chkSelectAll_Checked" Unchecked="chkSelectAll_Unchecked" />
-->
        <!-- Überschrift -->
        <TextBlock Grid.Row="0" Text="Bestellungen" FontSize="20" FontWeight="Bold"  Margin="0 0 0 10" />
        <DataGrid x:Name="dgBestellungen" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Extended" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="40">
                    <DataGridTemplateColumn.Header>
                        <CheckBox Name="headerCheckbox" Checked="chkSelectAll_Checked" Unchecked="chkSelectAll_Unchecked"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="4,0,0,0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="lfd_Nr" Binding="{Binding lfd_Nr}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Bestelldatum" Binding="{Binding Bestelldatum}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Bestellmenge" Binding="{Binding Bestellmenge}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Wert" Binding="{Binding Wert}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Bezeichnung" Binding="{Binding Bezeichnung}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Preis" Binding="{Binding Preis}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Lieferant" Binding="{Binding Lieferant}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Bestellnummer" Binding="{Binding Bestellnummer}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" IsReadOnly="True" Width="Auto" />
                <DataGridTemplateColumn Header="Lieferdatum" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Lieferdatum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Überschrift -->
        <TextBlock Grid.Row="2" Text="Wareneingang" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" />
        <DataGrid x:Name="dgWareneingaengeOffen" Grid.Row="3" AutoGenerateColumns="False" SelectionMode="Extended" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="40">
                    <DataGridTemplateColumn.Header>
                        <CheckBox Name="headerCheckbox2" Checked="chkSelectAll_Checked2" Unchecked="chkSelectAll_Unchecked2"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="4,0,0,0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="lfd_Nr" Binding="{Binding lfd_Nr}" IsReadOnly="True" Width="Auto"  />
                <DataGridTextColumn Header="Bestelldatum" Binding="{Binding Bestelldatum}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Bestellmenge" Binding="{Binding Bestellmenge}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Wert" Binding="{Binding Wert}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Bezeichnung" Binding="{Binding Bezeichnung}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Preis" Binding="{Binding Preis}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Lieferant" Binding="{Binding Lieferant}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Bestellnummer" Binding="{Binding Bestellnummer}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Status2" Binding="{Binding Status}" IsReadOnly="True" Width="Auto" />
                <DataGridTemplateColumn Header="Lieferdatum" Width="150">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Lieferdatum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="In Lager buchen" Width="120"  Click="LagerUebernehmen_Click"/>
            <Button Content="Ware eingegangen" Width="120" Click="BtnUebernehmen_Click"/>
            <Button Content="Schließen" Width="120" Margin="10,0,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
